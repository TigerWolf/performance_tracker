%h1 Listing portfolios
.column-group
  .box
    .column-group
      = link_to 'New Portfolio', new_portfolio_path, :class => 'ink-button blue'  
    .column-group
      %table.ink-table
        %thead
          %tr
            %th.content-left Name
            %th.content-left ClientID
            %th.content-left Montly budget
            %th
            %th
        %tbody
          - unless @portfolios.present?
            %tr
              %td{ :colspan => 8} No portfolios present
          -else              
            - @portfolios.each do |portfolio|
              %tr
                %td= portfolio.name
                %td= portfolio.client_id
                %td= portfolio.montly_budget
                %td.large-5
                  = link_to edit_portfolio_path(portfolio), {:class => 'ink-button', :style => 'padding: 0 5px;'} do
                    Edit
                    %i.icon-wrench
                %td.large-5
                  = link_to portfolio, {method: :delete, data: { confirm: 'Are you sure?' },:class => 'ink-button', :style => 'padding: 0 5px;'} do
                    Destroy
                    %i.icon-ban-circle

